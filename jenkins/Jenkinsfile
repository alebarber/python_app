pipeline {
    agent any  // Esto permite que el pipeline se ejecute en cualquier nodo disponible de Jenkins

    stages {
        stage('Build') {
            agent {
                docker {
                    image 'python:2-alpine'  // Imagen de Docker que se utilizará en esta etapa
                    args '-v /var/run/docker.sock:/var/run/docker.sock'  // Montaje de volumen Docker si es necesario
                }
            }
            steps {
                sh 'python -m py_compile sources/add2vals.py sources/calc.py'  // Tareas a ejecutar
            }
        }

        stage('Test') {
            agent {
                docker {
                    image 'qnib/pytest'  // Imagen Docker para la etapa de testing
                    args '-v /var/run/docker.sock:/var/run/docker.sock'  // Montaje de volumen Docker
                }
            }
            steps {
                sh 'py.test --verbose --junit-xml test-reports/results.xml sources/test_calc.py'  // Tareas de testing
            }
            post {
                always {
                    junit 'test-reports/results.xml'  // Publicar resultados de pruebas
                }
            }
        }

        stage('Deliver') {
            agent {
                docker {
                    image 'cdrx/pyinstaller-linux:python2'  // Imagen Docker para la etapa de entrega
                    args '-v /var/run/docker.sock:/var/run/docker.sock'  // Montaje de volumen Docker
                }
            }
            steps {
                sh 'pyinstaller --onefile sources/add2vals.py'  // Crear un ejecutable
            }
            post {
                success {
                    archiveArtifacts 'dist/add2vals'  // Archivar artefactos de la construcción
                }
            }
        }
    }
}
